					</tr>
					<tr>
						<th>Fakturanamn: </th>
						<td>{{model.invoicing_name}}</td>
						
					</tr>
					<tr>
						<th>Fakturaaddress: </th>
						<td>{{model.invoicing_address}}</td>
						
					</tr>
					<tr>
						<th>invoicing_postal_address1: </th>
						<td>{{model.invoicing_postal_address1}}</td>
						
					</tr>
					<tr>
						<th>invoicing_postal_address1: </th>
						<td>{{model.invoicing_postal_address2}}</td>
						
					</tr>
		
				</table>
			</div> <!-- end panel -->
		</div>
		<div class="col-xs-4">
			<div class="panel panel-primary">
			  <div class="panel-heading">
			  Order - {{model.orderId}} 
			 </div>

					<table class="table table-striped table-bordered table-condensed">
						<tr>
							<td colspan="3">
								<form class="form-inline" id="single-order-toolbar">
									
									{{#if isEditing}}
										{{view Ember.Select classNames="form-control" content=locations optionValuePath="content.id" optionLabelPath="content.label" value=model.locationId}}
									{{else}}
										<button class="disabled btn btn-default">Handläggande enhet: <strong>{{model.locationId}}</strong></button>
									{{/if}}
									{{#if isEditing}}
										<button {{action 'saveOrder'}} {{bind-attr class=":pull-right :btn :btn-danger :btn-md"}}><i class="fa fa-floppy-o"></i> Spara</button>
										<button {{action 'resetOrder'}} {{bind-attr class=":pull-right :btn :btn-default :btn-md"}}><i class="fa fa-trash-o"></i> Stäng</button>
									{{else}}
										<button {{action 'enterEditMode'}} class="pull-right btn btn-default btn-md"><i class="fa fa-pencil-square-o"></i> Edit</button>
									{{/if}}
								</form>
							</td>
						</tr>
						<tr>
							<th>Titel: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.title}}
								{{else}}
									{{model.title}}
								{{/if}}
							</td>
							
						</tr>
						<tr>
							<th>Författare: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.author}}
								{{else}}
									{{model.author}}
								{{/if}}
							</td>
						</tr>

						<tr>
							<th>Leveransbibliotek: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.deliveryPlace}}
								{{else}}
									{{model.deliveryPlace}}
								{{/if}}
							</td>
						</tr>
						<tr>
							<th>ISSN / ISBN: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.issnIsbn}}
								{{else}}
									{{model.issnIsbn}}
								{{/if}}
							</td>
						</tr>
						<tr>
							<th>Ordertyp: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.orderType}}
								{{else}}
									{{model.orderType}}
								{{/if}}
							</td>

						</tr>
						<tr>
							<th>Volym: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.volume}}
								{{else}}
									{{model.volume}}
								{{/if}}
							</td>


						</tr>
						<tr>
							<th>Publikations-år: </th>
							<td>								
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.publicationYear}}
								{{else}}
									{{model.publicationYear}}
								{{/if}}
							</td>
						</tr>
						<tr>
							<th>Nummer (issue): </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.issue}}
								{{else}}
									{{model.issue}}
								{{/if}}
							</td>

						</tr>
						<tr>
							<th>Sidor: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.pages}}
								{{else}}
									{{model.pages}}
								{{/if}}
							</td>

						</tr>
						<tr>
							<th>Journal titel: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.journalTitle}}
								{{else}}
									{{model.journalTitle}}
								{{/if}}
							</td>
						</tr>
						<tr>
							<th>Kopia (om lån ej möjligt): </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.photocopiesIfLoanNotPossible}}
								{{else}}
									{{model.photocopiesIfLoanNotPossible}}
								{{/if}}
							</td>
						</tr>
						<tr>
							<th>Utanför skandinavien: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.orderOutsideScandinavia}}
								{{else}}
									{{model.orderOutsideScandinavia}}
								{{/if}}
							</td>
						</tr>
						<tr>
							<th>E-post konfirmation: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.emailConfirmation}}
								{{else}}
									{{model.emailConfirmation}}
								{{/if}}
							</td>
						</tr>
						<tr>
							<th>Bäst-före-datum: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.notValidAfter}}
								{{else}}
									{{model.notValidAfter}}
								{{/if}}
							</td>
				
						</tr>
						<tr>
							<th>Prioritet: </th>
							<td>
								{{#if isEditing}}
									{{input classNames="form-control" type="text" value=model.deliveryType}}
								{{else}}
									{{model.deliveryType}}
								{{/if}}

							</td>
						</tr>
					</table>
			</div> <!-- end panel --> 


		</div>
