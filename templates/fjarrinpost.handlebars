					</tr>
					<tr>
						<th>company1: </th>
						<td>{{model.company1}}</td>
					</tr>
					<tr>
						<th>company2: </th>
						<td>{{model.company2}}</td>
						
					</tr>
					<tr>
						<th>company3: </th>
						<td>{{model.company3}}</td>
						
					</tr>
					<tr>
						<th>Telefon: </th>
						<td>{{model.phone_number}}</td>
						
					</tr>
					<tr>
						<th>E-post: </th>
						<td>{{model.email_address}}</td>
						
					</tr>
					<tr>
						<th>Lånekortsnummer: </th>
						<td>{{model.library_card_number}}</td>
						
					</tr>
					<tr>
						<th>Kundtyp: </th>
						<td>{{model.customer_type}}</td>
						
					</tr>
					<tr>
						<th>Kommentar: </th>
						<td>{{model.comments}}</td>
						
					</tr>
					<tr>
						<th>Formulärspråk: </th>
